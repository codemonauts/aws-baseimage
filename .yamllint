---
ignore: |
  roles/prometheus/files/generator.yml
  roles/*/templates/*

extends: default

rules:
  comments:
    min-spaces-from-content: 1
  comments-indentation: false
  line-length:
    max: 120
  braces:
    min-spaces-inside: 0
    max-spaces-inside: 1
  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true
